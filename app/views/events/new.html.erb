<h1>Create event</h1>

<h4>Event owner: <%= User.find(@event.user_id).name %></h4>
<div>
  <%= form_for @event do |f| %>
    <%= f.label :location %>
    <%= f.text_field :location %><br/>

    <%= f.label :date %><br/>
    <%= f.datetime_select :date %><br/>

    <%= f.submit 'Create event' %>
  <% end %>
</div>